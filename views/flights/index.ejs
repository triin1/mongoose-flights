<%- include("../partials/header") %>

<h2>All Flights</h2>

<table>
    <thead>
      <tr>
        <th>Airline</th>
        <th>Airport</th>
        <th>Flight Number</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% flights.forEach(function (f) { %>
        <tr>
          <td><%= f.airline %></td>
          <td><%= f.airport %></td>
          <td><%= f.flightNo %></td>
          <td><a href="/flights/<%= f._id %>">Flight Details</a></td>
        </tr>
      <% }) %>
    </tbody>
  </table>

<%- include("../partials/footer") %>